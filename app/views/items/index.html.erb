<div class="container">
	<br/>
	<h1>Lemoon shop</h1>
	<br/><br/>

	<h3>Les nouveautés :</h3><br/>
	<% @items.each do |item| %>
	<div class="card" style="width: 18rem;">
	  <div class="card-body">
	    <h5 class="card-title"><%= item.name %></h5>
	    <p class="card-text"><%= item.description %></p>
	    <p class="card-link">Prix: <%= item.price %>€</p>
	    <div class="row">
	    	<div class="col"> <%= link_to "Plus d'infos", item_path(item), class: "card-link" %> </div>
	   		<div class="col"> <%= button_to "Supprimer", item_path(item), method: :delete, data: { confirm: "êtes-vous sur?" },class: "card-link"%> </div>
	   	</div>
	  </div>
	</div>
	<% end %>
</div>