<h1>Items#new</h1>
<p>Find me in app/views/items/new.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @item do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Ajouter un produit</h1>
        <div class="form-group">
          <%= f.label :name, "Nom du produit" %><br />
          <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, autocomplete: "description", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Prix" %><br />
          <%= f.number_field :price, autocomplete: "price", class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Ajouter", class: "btn btn-lg btn-primary btn-block" %><br/><br/><br/>
        </div>
      <% end %>
    </div>
  </div>
</div>